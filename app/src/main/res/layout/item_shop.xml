<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/relative_round"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:elevation="3dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_shop_bg"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/ic_launcher"
        app:failureImageScaleType="centerCrop"
        app:placeholderImage="@drawable/ic_launcher"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="10dp">
    </com.facebook.drawee.view.SimpleDraweeView>

    <RelativeLayout
        android:id="@+id/item_shop_price_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_shop_bg"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <TextView
            android:id="@+id/item_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥58"
            android:textSize="16sp"
            android:textColor="#ff7e7e"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_shop_price_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价¥188"
            android:textSize="10sp"
            android:textColor="#9a9a9a"
            android:layout_toRightOf="@+id/item_shop_price"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月销23笔"
            android:textSize="10sp"
            android:textColor="#404040"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_shop_price_re"
        android:text="智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环智能手环"
        android:textSize="14sp"
        android:textColor="#404040"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"/>

</RelativeLayout>